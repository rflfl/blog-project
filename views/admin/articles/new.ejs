<%- include ('../../partials/header.ejs')%>
    <%- include ('../../partials/navbar.ejs')%>
        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Novo artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/articles/save">
                        <input class="form-control" type="text" name="title" placeholder="Defina o título do artigo"
                            id=""><br>
                        <textarea class="form-control" placeholder="Escreva o conteúdo do artigo" name="body"
                            id="article"></textarea><br>
                        <label>Categoria</label>
                        <select class="form-control" name="category" id="">
                            <% categories.forEach((category)=> {%>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <%})%>
                        </select>
                        <br>
                        <button class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>

        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: "#article"
            })
        </script>

        <%- include ('../../partials/footer.ejs')%>